@model AssignRoleViewModel
@{
    ViewData["Title"] = "Assign Role";
    ViewData["BreadCrumb"] = "Account";
}

<div class="row">
    <!-- Primary table start -->
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title"><a asp-controller="Account" asp-action="Index" class="btn btn-primary" style="margin-bottom: 10px;"><em class="icon-arrow-left"> </em>Back</a></h4>
                <h3>Are you sure to assign</h3>
                User Name : <h4>@Html.DisplayFor(model => model.UserName)</h4>
                <hr />
                <form asp-action="AssignRole">
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group">
                        <label asp-for="RoleName"></label>
                        <select asp-for="RoleName" class="form-control" asp-items="ViewBag.Role"></select>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Change</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Primary table end -->
</div>

